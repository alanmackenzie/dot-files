alias dcs="phpcs --standard=Drupal"

# Cut and paste between gnome and vim.
which vim.gnome 2>/dev/null && alias vim="vim.gnome"

# Cut straight and paste straight to the clipboard, not XA_PRIMARY.
alias xclip="xclip -selection c"
alias grep="grep -n --color=auto"
alias du='du -h'
alias df='df -h'
alias free='free -m'
